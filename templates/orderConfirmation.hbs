<div class="order-confirmation">
  <h2>{{localize "SR5.Marketplace.YourOrderHasArrived"}}: @Actor[{{actorId}}]</h2>
  <p>{{localize "SR5.Marketplace.YourItems"}}:</p>
  <ul>
    {{#each items}}
      <li>@Item[{{this._id}}]</li>
    {{/each}}
  </ul>

  <!-- Total Cost and Total Availability are always displayed -->
  <p><strong>{{localize "SR5.Marketplace.TotalCost"}}:</strong> {{totalCost}} <i class="fa-duotone fa-solid fa-circle-yen sr5-marketplace-yen"></i></p>
  <p><strong>{{localize "SR5.Marketplace.TotalAvailability"}}:</strong> {{totalAvailability}}</p>

  <!-- Only show Total Essence Cost if it is greater than zero -->
  {{#if totalEssenceCost}}
      <p><strong>{{localize "SR5.Marketplace.TotalEssece"}}:</strong> {{totalEssenceCost}}</p>
  {{/if}}

  <!-- Only show Total Karma Cost if it is greater than zero -->
  {{#if totalKarmaCost}}
      <p><strong>{{localize "SR5.Marketplace.Karma"}}:</strong> {{totalKarmaCost}} <i class="fa-duotone fa-solid fa-circle-star"></i></p>
  {{/if}}

  <!-- Confirmation timestamp -->
  <p><strong>{{localize 'SR5.Marketplace.ConfirmTime'}}:</strong> {{timestamp}}</p>
</div>  