<div class="shopping-basket-summary">
  <h2>{{localize "SR5.Marketplace.shoppingListRequest"}}</h2>
  
  <!-- Link to the actor this request is for -->
  {{#if actorId}}
    <p>{{localize "SR5.Marketplace.RequestFor"}}: @Actor[{{actorId}}]</p>
  {{/if}}
  
  <h3>{{localize "SR5.Marketplace.Items"}}</h3>
  <ul>
    {{#each items}}
      <li>
        {{#if (neq type "weapon")}}
          {{localize "SR5.Marketplace.system.technology.rating"}}: {{rating}} {{localize "SR5.Marketplace.of"}}
        {{/if}}
        {{name}} - {{cost}} <i class="fa-duotone fa-solid fa-circle-yen sr5-marketplace-yen"></i> {{localize "SR5.Marketplace.each"}}
      </li>
    {{/each}}
  </ul>

  <p><strong>{{localize "SR5.Marketplace.TotalCost"}}: {{totalCost}}Â¥</strong></p>
    <button id="{{id}}" class="review-request-button {{#unless (game.user.isGM)}}hide-for-non-gm{{/unless}}" data-request-id="{{id}}">
      {{localize 'SR5.Marketplace.ReviewAndConfirm'}}
    </button>
</div>  