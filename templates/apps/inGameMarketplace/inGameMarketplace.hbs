<div class="marketplace-container">
    <header class="marketplace-header">
        <nav class="marketplace-tabs" data-group="main">
            {{#each tabs}}
            <button id="id-{{this.id}}" class="marketplace-tab {{this.cssClass}}" data-tab="{{this.id}}" type="button">
                <i class="fas {{this.icon}}"></i>
                <span>{{this.label}}</span>
                {{#if (and this.count (gt this.count 0) (not (eq ../tabGroups.main this.id)))}}
                    <span class="basket-count">{{this.count}}</span>
                {{/if}}
            </button>
            {{/each}}
        </nav>
    </header>
      
      <!-- Render the content for the active tab -->
      <section class="marketplace-tab-content">
        {{{tabContent}}}
      </section>
</div>
