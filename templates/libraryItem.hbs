{{#each items}}
<div class="marketplace-item grid-item">
    <order class="grid-show">
        <div class="item-image">
            <img src="{{this.img}}" alt="{{this.name}}">
        </div>
        <div class="item-action">
            <button id="{{this._id}}" class="add-to-cart" data-item-id="{{this._id}}">
                <i class="fa-solid fa-basket-shopping-plus"></i>
            </button>
        </div>
    </order>
    <div class="item-details">
        <h4>{{this.name}}</h4>
        <p>{{localize "SR5.Marketplace.ItemTypes.Cost"}}: {{this.system.technology.cost}} Â¥</p>
    </div>
</div>
{{/each}}
